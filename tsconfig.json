{
  "compilerOptions": {
    "target": "ES2022",                   // Modern JS output
    "module": "CommonJS",                 // Node uses CommonJS by default
    "rootDir": "src",                     // Your source files
    "outDir": "dist",                     // Compiled JS output
    "strict": true,                       // Enables all strict type checking options
    "esModuleInterop": true,              // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                 // Optional: speeds up compilation
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,                     // Only allow TS files
    "types": ["node", "express"]          // Include Node and Express types
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
